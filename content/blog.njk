<h1>Latest posts</h1>

<ul>
  {% for post in collections.posts | reverse %}
    <li>
      <h2>
        <a href="{{ post.url }}">
          {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
        </a>
      </h2>
      {% if post.data.description %}<p>{{ post.data.description }}</p>{% endif %}
  {% endfor %}
</ul>
