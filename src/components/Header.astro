---
import Nav from "./Nav.astro";
---

<header>
  <Nav />
</header>

<style>
  header {
    padding: 1.5em 1.5em 1em;
    text-align: center;

    grid-area: header;
  }

  header h1 {
    font-size: 2.5rem;
    margin: 1rem 0 0;
  }

  @media (width >= 600px) {
    header h1 {
      font-size: 3.5rem;
    }
  }

  @media (width >= 1200px) {
    header h1 {
      font-size: 5rem;
    }
  }
</style>
